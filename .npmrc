# Force npm to use the correct platform binaries for Vercel
target_platform=linux
target_arch=x64
target_libc=glibc

# Skip optional dependencies that might cause issues
optional=false

# Use npm's legacy peer deps resolution
legacy-peer-deps=true

# Force rebuild of native modules
rebuild-from-source=true

# Platform-specific binary resolution
platform=linux
arch=x64

# Disable native rollup binaries to avoid platform mismatch issues
rollup-skip-native=true
rollup-no-native=true

# Ensure proper binary resolution
binary-host-mirror=https://github.com/rollup/rollup/releases/download
